<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@drawable/background"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Password"
            android:id="@+id/passLog"
            android:layout_alignParentEnd="true" android:layout_marginEnd="89dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="89dp" android:layout_marginTop="35dp" android:layout_below="@+id/usernameLog"
            android:background="@color/colorAccent" android:textAlignment="center"/>
    <EditText
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name"
            android:ems="10"
            android:id="@+id/usernameLog" android:layout_marginTop="119dp" android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" android:layout_marginEnd="87dp" android:layout_alignParentStart="true"
            android:layout_marginStart="91dp" android:background="@color/colorAccent" android:textAlignment="center"/>
    <TextView
            android:text="Register Here"
            android:layout_width="90dp"
            android:layout_height="wrap_content" android:id="@+id/regLog" android:layout_alignParentEnd="true"
            android:layout_marginEnd="100dp" android:layout_alignParentBottom="true"
            android:layout_marginBottom="86dp" android:layout_alignParentStart="true"
            android:layout_marginStart="100dp" android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"/>

    <include
            android:id="@+id/registration_layout"
            android:visibility="gone"
            layout="@layout/user_registration" />
    <Button
            android:text="Login"
            android:layout_height="wrap_content" android:id="@+id/buttonLog" android:layout_alignParentEnd="true"
            android:layout_marginEnd="98dp" android:layout_alignParentStart="true" android:layout_marginStart="102dp"
            android:layout_above="@+id/regLog" android:layout_marginBottom="52dp" android:layout_marginTop="110dp"
            android:layout_below="@+id/passLog" android:textAlignment="center"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"/>
</RelativeLayout>