<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="200dp"
              android:layout_margin="10dp"
              android:background="@drawable/rounded_item">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/imageVehicle"
            app:srcCompat="@mipmap/ic_launcher" android:layout_weight="1" android:layout_margin="10dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">

        <TextView
                android:text="Date" android:layout_marginTop="18dp" android:layout_marginStart="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/date"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />

        <TextView
            android:id="@+id/vehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="18dp"
            android:text="VehicleId+name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="18dp"
            android:text="cost"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>