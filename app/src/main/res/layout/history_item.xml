<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">


    <ImageView android:layout_width="match_parent" android:layout_height="180dp"
               android:id="@+id/map"
               android:background="@color/browser_actions_text_color"
               android:layout_marginLeft="8dp"
               android:layout_marginRight="8dp"
               app:layout_constraintTop_toBottomOf="@+id/timeStart">

    </ImageView>
    <TextView
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="StartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeStart" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageVehicle"
            app:layout_constraintTop_toBottomOf="@+id/map" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="VehicleId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vehicle"
            app:layout_constraintStart_toEndOf="@+id/imageVehicle"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/map"/>
    <TextView
            android:text="TripTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeTrip"
            app:layout_constraintTop_toBottomOf="@+id/map" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cost"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/timeTrip" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageVehicle"/>

</android.support.constraint.ConstraintLayout>